<script type="text/javascript">
  $(document).on('click','#go',function(e){

    var day = $('#day').val();
    var month = $('#month').val();

    var data = {};
    data.day = day;
    data.month = month;

    $.post('/getData',data,function(e){
      $('.response-box').html('On this day, '+e.text+"<br><b>Year : "+e.year+"</b>");
    });
  });
</script>
